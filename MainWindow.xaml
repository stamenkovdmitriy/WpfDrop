                                <PathFigure StartPoint="0,100">
                                    <ArcSegment  Point="100,184" Size="100,150" SweepDirection="Counterclockwise" />
                                    <ArcSegment x:Name="arc2"  Point="181,67" Size="80,100" SweepDirection="Counterclockwise" />
                                    <ArcSegment x:Name="arc3" Point="111,-22" Size="100,100" SweepDirection="Counterclockwise" />
                                    <ArcSegment Point="0,100" Size="100,100" SweepDirection="Counterclockwise" />
                                </PathFigure>
                            </PathGeometry>
                        </Path.Data>
                        <Path.BitmapEffect>
