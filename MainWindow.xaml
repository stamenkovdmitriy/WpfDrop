                <StackPanel Orientation="Horizontal">
                    <Border x:Name="myBorder"
                            HorizontalAlignment="Center"
                            Width="200" Height="200"
                            CornerRadius="100,160,80,90" Margin="100"  >
                        <Border.RenderTransform>
                            <ScaleTransform x:Name="scaleTransform" />
                        </Border.RenderTransform>
                        <Border.Triggers>
                            <EventTrigger RoutedEvent="MouseEnter">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleX"
                                            From="1" To=".9" Duration="0:0:1.8" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleY"
                                            From="1" To=".98" Duration="0:0:1.8" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleX"
                                            From=".9" To="1" Duration="0:0:0.8" />
                                        <DoubleAnimation
                                            Storyboard.TargetName="scaleTransform"
                                            Storyboard.TargetProperty="ScaleY"
                                            From=".9" To="1" Duration="0:0:0.8" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Border.Triggers>
                        <Border.Background>
                            <SolidColorBrush Color="#FF7BC3B3" Opacity="0.572"/>
                        </Border.Background>
                        <Border.BitmapEffect>
                            <DropShadowBitmapEffect
                                ShadowDepth="24" Opacity="0.885"
                                Softness="0.36" Direction="339"/>
                        </Border.BitmapEffect>
                        <Border
